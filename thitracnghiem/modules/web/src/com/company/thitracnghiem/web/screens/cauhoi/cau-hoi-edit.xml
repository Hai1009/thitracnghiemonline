<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://cauHoiEdit.caption"
        focusComponent="form"
        messagesPack="com.company.thitracnghiem.web.screens.cauhoi">
    <data>
        <instance id="cauHoiDc"
                  class="com.company.thitracnghiem.entity.CauHoi">
            <view extends="_local">
                <property name="maDT" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="cauHoiDc">
            <column width="350px">
                <textField id="maCHField" property="maCH"/>
                <pickerField id="maDTField" property="maDT">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="noiDungField" property="noiDung"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
